extends Layout
block title
	title Fiesta
	script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js')
	script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-resource.min.js")
	script(src="https://cdn.jsdelivr.net/angular.initial-value/latest/angular-initial-value.min.js")
	script(src='Javascripts/Fiesta.js')
	script(src="Javascripts/Event.fct.js")
	script(src="Javascripts/Event.ctrl.js")
	script(src="Javascripts/New.ctrl.js")
	script(src="Javascripts/Detail.ctrl.js")

block content		
	div(ng-app="Fiesta" ng-init="sessionUser = #{JSON.stringify(user)}")
		div(ui-view='')
		p
			a(ui-sref="list") All Events
			= ' '
			a(ui-sref="new") New Event
			
			if user
				form(method="post" action="/sessions?_method=delete")
					input.btn.btn-primary(type="submit" value="Sign Out")
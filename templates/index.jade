extends Layout
block title
	title Fiesta
	script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.min.js')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js')
	script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-resource.min.js")
	script(src="https://cdn.jsdelivr.net/angular.initial-value/latest/angular-initial-value.min.js")
	script(src="//code.jquery.com/jquery-1.11.3.min.js")
	script(src='Javascripts/Fiesta.js')
	script(src="Javascripts/Event.fct.js")
	script(src="Javascripts/Event.ctrl.js")
	script(src="Javascripts/New.ctrl.js")
	script(src="Javascripts/Detail.ctrl.js")

block content		
	div(ng-app="Fiesta" ng-init="sessionUser = #{JSON.stringify(user)}")
		if user
			div(ui-view='')
		else
			div.jumbotron
				div.container
					h1 Prepare to Fiesta!
					p.
						The search is over! Fiesta is a slick, hassle-free way to manage all of your events.
						We pride ourselves in providing you with an extremely easy yet powerful way to create, manage,
						and attend events whether they're small neighborhood BBQ's or huge company get-togethers.
						So what are you waiting for? It's time to Fiesta!

					a(href="users/new" class="btn btn-signup")
						| Sign me up!
					a(href="sessions/new" class="btn btn-signup btn-signup-hollow")
						| Sign In

extends ../Layout
block title
	title Log In
block content
	h3 Sign In
	form(method='post' action='/sessions')
		div.col-xs-12
			div.form-group
				label Username:
				input.form-control(type="text" name='username' required)
		div.col-xs-12
			div.form-group
				label Password:
				input.form-control(type='password' name='password' required)
		div.col-xs-12
			div.form-group
				input.btn.btn-success.form-control(type="submit" value="Sign In")
	
	h4(style="text-align: center") Dont have an account? We can fix that!
	div.col-xs-12
		a(href="/users/new")
			button.btn.btn-primary.btn-block Sign Up
